<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!--
    Entitlements for child processes (helpers, renderer, etc.)
    These inherit from the main app but with reduced privileges.
    Required for notarization with hardened runtime.
  -->

  <!-- Allow JIT compilation for V8/Electron child processes -->
  <key>com.apple.security.cs.allow-jit</key>
  <true/>

  <!-- Allow unsigned executable memory (required for Electron renderer) -->
  <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
  <true/>

  <!-- Disable library validation (required for native modules in child processes) -->
  <key>com.apple.security.cs.disable-library-validation</key>
  <true/>

  <!-- Inherit network access for API calls -->
  <key>com.apple.security.network.client</key>
  <true/>
</dict>
</plist>
